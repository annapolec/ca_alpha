<% if @article.errors.any? %>
<h3>
  Poniżej błędy przy zapisie
</h1>
<ul>
   <% @article.errors.full_messages.each do |msg| %>
    <li> <%= msg == "Title can't be blank" ? "pusty tytul" : msg == "Description can't be blank" ? "pusty opis" : msg %> </li>
  <% end %>
</ul>
<% end %>


<%= form_for @article do |f| %>
  <p>
    tytul :
    <% f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to "strona index", articles_path %>
